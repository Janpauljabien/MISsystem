    $oldPosition = $task1->position;
    $gap = $newPosition - $oldPosition;
    $total = $taskLists->count() - 1;

    if ($gap == 1 || $gap == -1) {
        // Temporarily store task1 position
        $tempPosition = $task1->position;

        // Swap positions
