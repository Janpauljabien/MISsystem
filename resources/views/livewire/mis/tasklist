        $task2->position = $tempPosition;

        $task1->save();
        $task2->save();
    } elseif ($gap <= 0) {

        foreach ($taskLists as $taskList) {
            if ($taskList->position >= $newPosition && $taskList->position != $total) {
                $taskList->position = $taskList->position + 1;
                $taskList->save();
            }
        }
    } elseif ($gap >= 0) {

        foreach ($taskLists as $taskList) {
